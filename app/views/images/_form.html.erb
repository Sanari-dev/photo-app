<div class="col-md-6">
  <%= form_for @image, :html => {multipart: true, :class => "form-horizontal image"} do |form| %>
    <%= render 'errors', obj: @image %>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control'  %>
    </div>

    <div class="form-group">
      <%= form.label :picture %>
      <%= form.file_field :picture, accept: 'image/jpg,img/png,img/gif', class: 'form-control'  %>
    </div>

    <div class="form-group mt-4">
      <%= form.submit %>
    </div>
  <% end %>
</div>

<script type="text/javascript">
  $('#image_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if(size_in_megabytes > 5) {
      alert('Maximum file size is 5MB')
    }
  })
</script>
